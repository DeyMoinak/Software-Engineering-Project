<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".StudentHomepage">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/takeMathematicsQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="270dp"
        android:layout_marginBottom="20dp"
        android:text="Take Mathematics Quiz"
        app:backgroundTint="@color/design_default_color_primary_variant" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/takeScienceQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="270dp"
        android:layout_marginBottom="20dp"
        android:text="Take Science Quiz"
        app:backgroundTint="@color/design_default_color_primary_variant" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewAdditionalResources"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="425dp"
        android:layout_marginEnd="270dp"
        android:layout_marginBottom="20dp"
        android:text="View Additional Resources"
        app:backgroundTint="@color/design_default_color_primary_variant" />

</RelativeLayout>